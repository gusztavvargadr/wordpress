# By default, this configuration enables connecting to the hosts with the default password `vagrant`.
# Replace `$VAGRANTFILE_DIR` with the full path of the directory containing `Vagrantfile` to use SSH public key authentication instead.

Host samples.core
  HostName 127.0.0.1
  Port 10022
  User vagrant
  IdentityFile $VAGRANTFILE_DIR/.vagrant/machines/samples.core/virtualbox/private_key
  StrictHostKeyChecking no
  LocalForward 127.0.0.1:8889 127.0.0.1:8889

Host samples.gutenberg-editor
  HostName 127.0.0.1
  Port 20022
  User vagrant
  IdentityFile $VAGRANTFILE_DIR/.vagrant/machines/samples.gutenberg-editor/virtualbox/private_key
  StrictHostKeyChecking no
  LocalForward 127.0.0.1:8888 127.0.0.1:8888

Host samples.gutenberg-block
  HostName 127.0.0.1
  Port 30022
  User vagrant
  IdentityFile $VAGRANTFILE_DIR/.vagrant/machines/samples.gutenberg-block/virtualbox/private_key
  StrictHostKeyChecking no
  LocalForward 127.0.0.1:9999 127.0.0.1:9999

Host src.gutenberg-block
  HostName 127.0.0.1
  Port 40022
  User vagrant
  IdentityFile $VAGRANTFILE_DIR/.vagrant/machines/src.gutenberg-block/virtualbox/private_key
  StrictHostKeyChecking no
  LocalForward 127.0.0.1:40080 127.0.0.1:40080
